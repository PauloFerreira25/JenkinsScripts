#!/usr/bin/env groovy

node {

    createFolder()
    createMavenMultiBranchJob()
    createKubernetesServiceDeploy()
}

def createFolder(){
     stage ("Criar Diretorios") {
        folder(${PROJETO})
        folder(${PROJETO}+"/"+${MODULE})
        environment { 
            FULL_FOLDER=${PROJETO}+"/"+${MODULE}
        }
     }
}
def createMavenMultiBranchJob(){
    // multibranchPipelineJob()
     stage ("Criar Maven Job") {
         echo ${FULL_FOLDER}
     }
}
def createKubernetesServiceDeploy(){}

